rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {
match /users/{userId} {
allow read, write: if request.auth != null && request.auth.uid == userId;
match /history/{doc} { allow read: if request.auth != null && request.auth.uid == userId; allow write: if request.auth != null && request.auth.uid == userId; }
}
// Admin-only read of users collection (not safe in prod). For production, create cloud functions.
match /users/{any} { allow read: if false; }
}
}